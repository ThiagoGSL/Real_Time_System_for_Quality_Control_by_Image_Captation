import matplotlib.pyplot as plt

e0 = 1
e2 = 3
e4 = 5
e6 = 4
e8 = 6
e10 = 2

a0 = 4
a2 = 6
a4 = 10
a6 = 3
a8 = 4
a10 = 11



horario = [0,2,4,6,8,10]
erros = [e0,e2,e4,e6,e8,e10]
acertos = [a0,a2,a4,a6,a8,a10]

media_acertos = (a0+a2+a4+a6+a8+a10)/6



plt.stackplot(horario, erros, acertos, colors=['r', 'g'], alpha = 0.5 , labels=['erros','acertos'])
plt.axhline(media_acertos ,color = 'g', linestyle = 'dashdot')



plt.xlabel('Tempo')
plt.ylabel('Quantidade')
plt.title('Grafico de Erros e Acertos')
plt.legend()
plt.show()